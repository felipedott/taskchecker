
              <% tasks.each do |task| %>
                <% if (task.member_id == current_user.id || task.manager_id == current_user.id) && task.completed == false %>

                <div class="card-tasks">
                  <div class="card-tasks-infos">
                  &nbsp;&nbsp;&nbsp;
                    <h2>Team:<%= task.name %></h2>
                    <p>Task: <small> <%= task.team.name %> </small> </p>
                    <p>Description:<%= task.description %></p>
                    <p>Deadline:<%= task.deadline %></p>
                    &nbsp;&nbsp;&nbsp;
                  <%= link_to "details", task, class: 'btn-dark-purple' %>


                      <div class="progress">
                    <% if task.completed == false && task.started == false %>
                        <div class="progress-bar progress-bar-danger progress-bar-striped active" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                         Not Started!
                        </div>

                      <% elsif task.started == true && task.completed == false %>
                        <div class="progress">
                          <div class="progress-bar progress-bar-warning progress-bar-striped active"role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                           Task started!
                          </div>

                      <% else task.started == true && task.completed == true %>
                        <div class="progress">
                          <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                            Task finished!
                          </div>

                      <% end %>
                    </div>
                      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

                    </div>
                  </div>
                <% end %>

              <% end %>
