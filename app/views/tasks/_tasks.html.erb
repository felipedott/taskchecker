<div class="col">
  <div class="card h-100">

      <% tasks.each do |task| %>
        <% if (task.member_id == current_user.id || task.manager_id == current_user.id) && task.completed == false %>

          <div class="card-header d-flex justify-content-between">
            <h2 class="card-title"><%= task.name %></h2>
            <p class="card-text"><%= (task.deadline - Date.today).to_i %>d</p>
          </div>

          <div class="card-body">
            <p class="card-text"><%= task.description %></p>
          </div>

          <div class="card-footer justify-content-between">
            <p class="card-text"><%= render 'tasks/progress-bar', task: task %></p>
          <%= link_to task do %>
            <i class="fa-solid fa-angles-right"></i>
          <% end %>
          </div>

        <% end %>
      <% end %>


  </div>
</div>
