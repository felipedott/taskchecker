<%= render 'shared/navbar' %>
<%= render 'shared/sidebar' %>

<div class="main">
  <div class="container mt-5">
    <div class="row">
      <div class="col-12 col-md-8 col-sm-6 ">

         <h1>All Tasks</h1>


          <div class="cards">
              <% @tasks.each do |task| %>
                <div class="card-tasks">
                  <div class="card-tasks-infos">
                    <h2><%= task.name %></h2>
                    <p> <small> < %= task.team %> </small> </p>
                    <p><%= task.description %></p>
                    <p><%= task.deadline %></p>
                    <p> AQUI ENTRA A PROGRESS BAR -> ( < %= @tasks.completed %> / <%= @tasks.size %> ) </p>
                  </div>
                </div>
              <% end %>

            </div>


         <%= link_to 'New task', new_task_path %>


      </div>
    </div>
  </div>
</div>
