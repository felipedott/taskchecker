<%= render 'shared/navbar' %>
<%= render 'shared/sidebar' %>

<div class="main">
  <div class="container mt-5">
    <div class="row">
      <div class="col-12 col-md-8 col-sm-6 ">
          <div class ='d-flex justify-content-between'>
            <h2>My teams</h2>
            <%= link_to 'New Team', new_team_path, class: 'btn btn-outline-danger' %>
          </div>

          <hr>
          <div class="cards">

            <% @teams.each do |team| %>
              <% if team.user_ids.include?(@user.id) %>
                <div class="card-teams">
                  <%= link_to team , class: 'hover' do %>
                  <div>
                    <h3><%= team.name %></h3>
                    <div class="card-teams-info">
                      <ul class="tile-me">
                        <% team.users.each do |user| %>
                          <%# <li>< %= user.first_name % ></li> %>
                          <li> <img class="avatar tile" alt="avatar" style="width: 40px" src="https://kitt.lewagon.com/placeholder/users/arthur-littm" /> </li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
     </div>
    </div>
  </div>
</div>
