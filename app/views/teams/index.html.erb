<%= render 'shared/navbar' %>
<%= render 'shared/sidebar' %>

<div class="main">
  <div class="container mt-5">
    <div class="row">
      <div class="col-12 col-md-8 col-sm-6 ">
        <div class ='d-flex justify-content-between align-items-center'>
          <h2>My teams</h2>
          <%= link_to 'New Team', new_team_path, class: 'btn btn-primary' %>
        </div>
      <hr>
        <div class="cards">
          <% @teams.each do |team| %>
              <% if team.user_ids.include?(@user.id) %>
                <div class="card-teams">
                  <div>
                    <div class="card-teams-info">
                      <h3><%= team.name %></h3>
                        <%= link_to team , class: 'hover' do %>
                          <ul class="tile-me">
                            <% team.users.each do |user| %>
                              <% if user.avatar.key == nil %>
                                <li> <img class="avatar-square tile" alt="avatar" src="/app/assets/images/default_avatar.jpg " /> </li>
                              <% else %>
                                <li> <img class="avatar-square tile" alt="avatar" src="<%= cl_image_path user.avatar.key%>" /> </li>
                              <% end %>
                            <% end %>
                           </ul>
                        </div>
                     </div>
                   <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</div>
